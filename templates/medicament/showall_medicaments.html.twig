{% extends 'base.html.twig' %}


{% block body %}
    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">


                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->



                    <!-- DataTales Example -->
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Les Medicaments existantes</h6>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                    <tr>
                                        <th>Nom</th>
                                        <th>Description</th>

                                        <th>Image</th>

                                        <th>Catégorie</th>

                                        <th>Take (i'm poor)</th>

                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for medicament in medicaments  %}
                                        <tr>
                                            <td>{{ medicament.name }}</td>
                                            <td>{{ medicament.description }}</td>

                                            <td><img src="/uploads/brochures/{{medicament.image}}" alt="{{ medicament.name }}"
                                                     style="height:100px; width:200px; margin-left:70px; box-shadow: 2px 2px 6px #888888; border-radius: 5px;"></td>
                                            <td>
                                            {% if medicament.category is not null %}
                                                {{ medicament.category.name }}
                                            {% else %}
                                                No category assigned
                                            {% endif %}
                                            </td>
                                            <td>
                                                <a href="{{ path('deleteProduit', {'id': medicament.id}) }}" onclick="return confirm('Are you sure you want to delete this product?')">Supprimer</a>
                                            </td>

                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                                <div class ="d-flex justify-content-center">
                                    {{ knp_pagination_render(medicaments,'pagination.html.twig') }}
                                </div>



                            </div>
                        </div>
                    </div>

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->
        </div>
        <!-- End of Content Wrapper -->
    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
         aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                    <a class="btn btn-primary" href="login.html">Logout</a>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

