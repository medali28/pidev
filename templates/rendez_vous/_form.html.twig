{{ form_end(form) }}

<script>
    function validateDate() {
        var selectedDate = document.getElementById("rendez_vous_date").value;
        var currentDate = new Date().toISOString().split('T')[0]; // Date actuelle

        if (selectedDate < currentDate) {
            alert("La date sélectionnée ne peut pas être antérieure à la date actuelle.");
            document.getElementById("rendez_vous_date").value = currentDate; // Réinitialiser à la date actuelle
        }
    }
</script>
