{% extends 'base.html.twig' %}

{% block title %}RendezVous index{% endblock %}

{% block body %}
    <main>

        {{ include('navigation.html.twig') }}
        {{ include('header.html.twig') }}


        <section class="section-padding">
            <div >
                <div >
                    <div class="col-lg-8 col-12 mt-3 mx-auto">
                        <div class="custom-block custom-block-topics-listing bg-white shadow-lg mb-5">
                            <div class="d-flex">

                                <div class="custom-block-topics-listing-info d-flex">
                                    <div>
                                        <h1>liste de rendez-vous</h1>
                                        <table class="table">
                                            <thead>
                                            <tr>
                                                <th></th>
                                                <th>Date</th>
                                                <th>Heure</th>
                                                <th>Status_rdv</th>
                                                <th>Description</th>

                                                <th>Urgence</th>
                                                <th>Nom du Patient</th>
                                                <th>Nom du Médecin</th>
                                                <th>Actions</th>
                                            </tr>
                                            </thead>
                                            <tbody>
                                            {% for key,rendez_vou in pendingAppointments %}
                                                <tr>
                                                    <td>{{ key + 1 }}</td>
                                                    <td>{{ rendez_vou.date ? rendez_vou.date|date('Y-m-d') : '' }}</td>
                                                    <td>{{ rendez_vou.time ? rendez_vou.time|date('H:i') : '' }}</td>
                                                    <td>{{ rendez_vou.statusRdv }}</td>
                                                    <td>{{ rendez_vou.description }}</td>

                                                    <td>{{ rendez_vou.urgence ? 'oui' : 'non' }}</td>
                                                    <td>{{ rendez_vou.patient.getFirstName() }} {{ rendez_vou.patient.getLastName() }}</td>
                                                    <td>{{ rendez_vou.medecin.getFirstName() }} {{ rendez_vou.medecin.getLastName() }}</td>
                                                    <td>
                                                        <a href="{{ path('app_rendez_vous_show', {'id': rendez_vou.id}) }}">Afficher</a>
                                                        <a href="{{ path('app_rendez_vous_edit', {'id': rendez_vou.id}) }}">Modifier</a>
                                                    </td>
                                                </tr>
                                            {% else %}
                                                <tr>
                                                    <td colspan="7">Aucun enregistrement trouvé</td>
                                                </tr>
                                            {% endfor %}
                                            </tbody>
                                        </table>

                                        <a href="{{ path('app_rendez_vous_new') }}">Demander un rendez-vous</a>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>




    </main>

    {{ include('footer.html.twig') }}



{% endblock %}
