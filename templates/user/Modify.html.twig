
{% extends 'user/profilebase.html.twig' %}
{% block body %}
    <main  class="main-content position-relative border-radius-lg">
        <aside class="sidenav bg-white navbar navbar-vertical navbar-expand-xs border-0 border-radius-xl my-3 fixed-start ms-4 " id="sidenav-main">
            <div class="sidenav-header">
                <i class="fas fa-times p-3 cursor-pointer text-secondary opacity-5 position-absolute end-0 top-0 d-none d-xl-none" aria-hidden="true" id="iconSidenav"></i>
                <a class="navbar-brand m-0" href=" https://demos.creative-tim.com/argon-dashboard/pages/dashboard.html " target="_blank">
                    <img src="{{ asset('/user/images/logoapp.png') }}" class="navbar-brand-img h-100" alt="main_logo">
                    <span class="ms-1 font-weight-bold">My eDr</span>
                </a>
            </div>
            <hr class="horizontal dark mt-0">
            <div class="collapse navbar-collapse  w-auto " id="sidenav-collapse-main">
                <ul class="navbar-nav">
                    <li class="nav-item mt-3">
                        <h6 class="ps-4 ms-2 text-uppercase text-xs font-weight-bolder opacity-6">Account pages</h6>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="{{ path('Update_data',{'id':user.id}) }}">
                            <div class="icon icon-shape icon-sm border-radius-md text-center me-2 d-flex align-items-center justify-content-center">
                                <i class="ni ni-single-02 text-dark text-sm opacity-10"></i>
                            </div>
                            <span class="nav-link-text ms-1">Profile</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link " href="{{ path('change_pass',{'id':user.id}) }}">
                            <div class="icon icon-shape icon-sm border-radius-md text-center me-2 d-flex align-items-center justify-content-center">
                                <i class="ni ni-single-copy-04 text-warning text-sm opacity-10"></i>
                            </div>
                            <span class="nav-link-text ms-1">change password</span>
                        </a>
                    </li>
                    {#                    <li class="nav-item">#}
                    {#                        <a class="nav-link " href="../pages/sign-up.html">#}
                    {#                            <div class="icon icon-shape icon-sm border-radius-md text-center me-2 d-flex align-items-center justify-content-center">#}
                    {#                                <i class="ni ni-collection text-info text-sm opacity-10"></i>#}
                    {#                            </div>#}
                    {#                            <span class="nav-link-text ms-1">Sign Up</span>#}
                    {#                        </a>#}
                    {#                    </li>#}
                </ul>
            </div>

        </aside>
        <div class="card shadow-lg mx-4 card-profile-bottom" >
            <div class="card-body p-3"  >
                <div class="row gx-4"  style="margin-left: 25%">
                    <div class="col-auto">
                        <div class="avatar avatar-xl position-relative">
                            {% if form.vars.value.image is not empty %}
                                <img class="w-100 border-radius-lg shadow-sm" alt="user1" src="{{ asset('/user/profile/images/'~ form.vars.value.image) }}" >
                            {% else %}
                                <img src="{{ asset('/user/profile/images/profilebase.png') }}" class="w-100 border-radius-lg shadow-sm"  alt="user1">
                            {% endif %}


                        </div>
                    </div>
                    <div class="col-auto my-auto">
                        <div class="h-100">
                            <h5 class="mb-1">
                                {{ user.lastName ~ ' ' ~ user.firstName }}
                            </h5>
                            <p class="mb-0 font-weight-bold text-sm">
                                {{ user.pays ~','~user.ville }}
                            </p>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-6 my-sm-auto ms-sm-auto me-sm-0 mx-auto mt-3">
                        <div class="nav-wrapper position-relative end-0">
                            <ul class="nav nav-pills nav-fill p-1" role="tablist">
                                <li class="nav-item">
                                    <a href="{{ path('app_logout') }}" class="nav-link mb-0 px-0 py-1 active d-flex align-items-center justify-content-center" role="tab" aria-selected="true">
                                        <i class="fas fa-sign-out-alt"></i>
                                        <span class="ms-2">Sign Out</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link mb-0 px-0 py-1 d-flex align-items-center justify-content-center " data-bs-toggle="tab" href="javascript:;" role="tab" aria-selected="false">
                                        <i class="ni ni-email-83"></i>
                                        <span class="ms-2">Messages</span>
                                    </a>
                                </li>

                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="container-fluid py-4 ">
            <div class="row" style="margin-left: 20%">
                <div class="col-md-12">
                    {{ form_start(form ,{attr:{novalidate:'novalidate'}}) }}
                    <div class="card">
                        <div class="card-header pb-0">
                            <div class="d-flex align-items-center">
                                <p class="mb-0">Edit Profile</p>
                            </div>
                        </div>
                        <div class="card-body">
                            <p class="text-uppercase text-sm">User Information</p>
                            <div class="row" >
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="example-text-input" class="form-control-label">Image</label>
                                        {% if form.vars.value.image is not empty %}
                                            <img class="form-control" style="height:80px ;width: 80px" alt="user1" src="{{ asset('/user/profile/images/'~ form.vars.value.image) }}" >
                                        {% else %}
                                            <img src="{{ asset('/user/profile/images/profilebase.png') }}" class="form-control" style="height:80px ;width: 80px" alt="user1">
                                        {% endif %}
                                        {{  form_widget(form.image,  {'attr': {'class':'form-control'}}) }}
                                        {{ form_errors(form.image) }}

                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="example-text-input" class="form-control-label">First Name</label>
                                        {{ form_widget(form.first_name ,  {'attr': {'placeholder': 'Enter your first name' , 'class':'form-control'}}) }}
                                        {{ form_errors(form.first_name) }}

                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="example-text-input" class="form-control-label">Last Name</label>
                                        {{ form_widget(form.last_name ,  {'attr': {'placeholder': 'Enter your last name' , 'class':'form-control'}}) }}
                                        {{ form_errors(form.last_name) }}
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="example-text-input" class="form-control-label">Phone Number</label>
                                        {{  form_widget(form.num_tel,  {'attr': {'placeholder': 'Enter your first name' , 'class':'form-control'}}) }}
                                        {{ form_errors(form.num_tel) }}
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="example-text-input" class="form-control-label">Email</label>
                                        {{  form_widget(form.email ,  {'attr': {'placeholder': 'Enter your Email' , 'class':'form-control'}}) }}
                                        {{ form_errors(form.email) }}
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="example-text-input" class="form-control-label">Address</label>
{#                                        {{  form_widget(form.pays ,  {'attr': {'placeholder': 'Enter your Adress' , 'class':'form-control'}}) }}#}
{#                                        {{ form_errors(form.address) }}#}
                                    </div>
                                </div>

                            </div>

                            <hr class="horizontal dark">
                            <p class="text-uppercase text-sm">Specific Information</p>
                            {% if role == "patient" %}
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label for="example-text-input" class="form-control-label">Antecedent Maladie</label>
                                            {{ form_widget(form.antecedent_maladie ,  {'attr': {'placeholder': 'Enter Antecedent Maladie' , 'class':'form-control'}}) }}
                                            {{ form_errors(form.antecedent_maladie) }}
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label for="example-text-input" class="form-control-label">Antecedent Medicaux</label>
                                            {{ form_widget(form.antecedent_medicaux ,  {'attr': {'placeholder': 'Enter Antecedent Medicaux' , 'class':'form-control'}}) }}
                                            {{ form_errors(form.antecedent_medicaux) }}
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label for="example-text-input" class="form-control-label">allergies</label>
                                            {{ form_widget(form.allergies ,  {'attr': {'placeholder': 'Enter allergies' , 'class':'form-control'}}) }}
                                            {{ form_errors(form.allergies) }}
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="">
                                            <label for="example-text-input" class="form-control-label">Maladie Chronique</label>
                                            <div class=""> <select name="maladie_chronique" id="maladie_chronique">
                                                    <option value="None">None</option>
                                                    <option value="Cardiaques">Cardiaques</option>
                                                    <option value="Diabète">Diabète</option>
                                                    <option value="Cancer">Cancer</option>
                                                    <option value="respiratoires chroniques">Respiratoires Chroniques</option>
                                                    <option value="rénales chroniques">Rénales Chroniques</option>
                                                </select></div>

                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="example-text-input" class="form-control-label">Groupe Sanguin</label>
                                            <div class=""> <select name="groupe_sanguin" id="groupe_sanguin">
                                                    <option value="None">None</option>
                                                    <option value="A+">A+</option>
                                                    <option value="A-">A-</option>
                                                    <option value="B+">B+</option>
                                                    <option value="B-">B-</option>
                                                    <option value="AB+">AB+</option>
                                                    <option value="AB-">AB-</option>
                                                    <option value="O+">O+</option>
                                                    <option value="O-">O-</option>
                                                </select></div>
                                        </div>
                                    </div>

                                </div>
                            {% elseif role == "medecin" %}
                                <div class="row">
                                    <div class="col-md-4">
{#                                        <div class="form-group">#}
{#                                            <label for="example-text-input" class="form-control-label">Specialite</label>#}
{#                                            {{  form_widget(form.specialite,  {'attr': {'placeholder': 'Enter specialite' , 'class':'form-control'}}) }}#}
{#                                            {{ form_errors(form.specialite) }}#}
{#                                        </div>#}
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label for="example-text-input" class="form-control-label">Phone Number</label>
                                            {{  form_widget(form.num_tel2,  {'attr': {'placeholder': 'Enter Phone Number' , 'class':'form-control'}}) }}
                                            {{ form_errors(form.num_tel2) }}
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label for="example-text-input" class="form-control-label">Prix Concultation</label>
                                            {{  form_widget(form.prix_c,  {'attr': {'placeholder': 'Enter Prix Concultation' , 'class':'form-control'}}) }}
                                            {{ form_errors(form.prix_c) }}
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label for="example-text-input" class="form-control-label">Date Debut</label>
                                            <input class="form-control" type="time" id="date_debut" name="date_debut" ></div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label for="example-text-input" class="form-control-label">Date Fin</label>
                                            <input class="form-control" type="time"  id="date_fin" name="date_fin">
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label for="example-text-input" class="form-control-label">Time</label>
                                            <div class=""> <select name="dure_rdv" id="dure_rdv">
                                                    <option value="15">15 min</option>
                                                    <option value="20">20 min</option>
                                                    <option value="30">30 min</option>
                                                    <option value="40">40 min</option>
                                                    <option value="50">50 min</option>
                                                    <option value="60">60 min</option>
                                                </select></div>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label for="example-text-input" class="form-control-label">Diplomes</label>
                                            {% if form.vars.value.diplomes is not empty %}
                                                <img class="form-control" style="height:80px ;width: 80px" alt="user1" src="{{ asset('/profile/images/'~ form.vars.value.diplomes) }}" >
                                            {% else %}
                                                <img src="{{ asset('/profile/images/diplomes.jpg') }}" class="form-control" style="height:80px ;width: 80px" alt="user1">
                                            {% endif %}

                                            {{  form_widget(form.diplomes,  {'attr': {'class':'form-control'}}) }}
                                            {{ form_errors(form.diplomes) }}

                                        </div>

                                    </div>
                                </div>
                            {%  endif %}
                        </div>

                        <button class="set  btn ms-auto" style="color:white; background-color: #529CA7">Save</button>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </main>

    <script src="{{ asset('/user/js/argon-dashboard.min.js') }}"></script>
    <script>
        document.querySelector('.set').addEventListener('click', function() {
            console.log("it's work")
            document.querySelector('form').submit();
        });

    </script>
{%  endblock %}
