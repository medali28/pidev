            position: absolute;
            content: '';
            bottom: 11px;
            right: -170px;
            height: 3px;
            width: 170px;
            background: #262626;
        }
        .progress-bar .step .bullet.active:after{
            background: #529CA7;
            transform: scaleX(0);
            transform-origin: left;
            animation: animate 0.3s linear forwards;
        }
        @keyframes animate {
            100%{
