
{% extends 'user/profilebase.html.twig' %}
{% block body %}
    <main  class="main-content position-relative border-radius-lg">
        <aside class="sidenav bg-white navbar navbar-vertical navbar-expand-xs border-0 border-radius-xl my-3 fixed-start ms-4 " id="sidenav-main">
            <div class="sidenav-header">
                <i class="fas fa-times p-3 cursor-pointer text-secondary opacity-5 position-absolute end-0 top-0 d-none d-xl-none" aria-hidden="true" id="iconSidenav"></i>
                <a class="navbar-brand m-0" href=" https://demos.creative-tim.com/argon-dashboard/pages/dashboard.html " target="_blank">
                    <img src="{{ asset('/user/images/logoapp.png') }}" class="navbar-brand-img h-100" alt="main_logo">
                    <span class="ms-1 font-weight-bold">My eDr</span>
                </a>
            </div>
            <hr class="horizontal dark mt-0">
            <div class="collapse navbar-collapse  w-auto " id="sidenav-collapse-main">
                <ul class="navbar-nav">
                    <li class="nav-item mt-3">
                        <h6 class="ps-4 ms-2 text-uppercase text-xs font-weight-bolder opacity-6">Account pages</h6>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="{{ path('Update_data',{'id':user.id}) }}">
                            <div class="icon icon-shape icon-sm border-radius-md text-center me-2 d-flex align-items-center justify-content-center">
                                <i class="ni ni-single-02 text-dark text-sm opacity-10"></i>
                            </div>
                            <span class="nav-link-text ms-1">Profile</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link " href="{{ path('change_pass',{'id':user.id}) }}">
                            <div class="icon icon-shape icon-sm border-radius-md text-center me-2 d-flex align-items-center justify-content-center">
                                <i class="ni ni-single-copy-04 text-warning text-sm opacity-10"></i>
                            </div>
                            <span class="nav-link-text ms-1">change password</span>
                        </a>
                    </li>
                    {#                    <li class="nav-item">#}
                    {#                        <a class="nav-link " href="../pages/sign-up.html">#}
                    {#                            <div class="icon icon-shape icon-sm border-radius-md text-center me-2 d-flex align-items-center justify-content-center">#}
                    {#                                <i class="ni ni-collection text-info text-sm opacity-10"></i>#}
                    {#                            </div>#}
                    {#                            <span class="nav-link-text ms-1">Sign Up</span>#}
                    {#                        </a>#}
                    {#                    </li>#}
                </ul>
            </div>

        </aside>
        <div class="container-fluid py-4 ">
            <div class="row">
                <div class="col-md-8" style="margin-left: 20%">
                    {{ form_start(form ,{attr:{novalidate:'novalidate'}}) }}
                    <div class="card">
                        <div class="card-header pb-0">
                            <div class="d-flex align-items-center">
                                <p class="mb-0">Edit Password</p>
                            </div>
                        </div>
                        <div class="card-body">
                            <p class="text-uppercase text-sm">Password Information</p>

                            <div class="row" >

                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="example-text-input" class="form-control-label">Old Password</label>
{#                                        {{ form_widget(form.oldpass ,  {'attr': {'placeholder': 'Enter your Old Password' , 'class':'form-control'}}) }}#}
{#                                        {{ form_errors(form.oldpass) }}#}
                                        <input type="password" class="form-control"  placeholder="Enter your Old Password" name="oldpass" id="oldpass">

                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="example-text-input" class="form-control-label">New Password</label>
                                        {{ form_widget(form.password ,  {'attr': {'placeholder': 'Enter your Password' , 'class':'form-control'}}) }}
                                        {{ form_errors(form.password) }}
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="example-text-input" class="form-control-label">Confim password</label>
                                        {{  form_widget(form.confirm_password,  {'attr': {'placeholder': 'Enter your Password' , 'class':'form-control'}}) }}
                                        {{ form_errors(form.confirm_password) }}
                                    </div>
                                </div>

                            </div>

                        </div>

                        <button class="change  btn ms-auto" style="color:white; background-color: #529CA7">Save</button>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </main>

    <script src="{{ asset('/user/js/argon-dashboard.min.js') }}"></script>
    <script>
        document.querySelector('.change').addEventListener('click', function() {
            console.log("it's work")
            document.querySelector('form').submit();
        });
        function remove(event){
            event.preventDefault();
            console.log("here");
            const userId = event.currentTarget.getAttribute('id');
            console.log(userId);
            const confirmation = confirm("Are you sure you want to delete this account?");
            if (confirmation) {
                window.location.href = `https://127.0.0.1:8000/${userId}/delete` ;
                // fetch(`/${userId}/delete`);
            } else {
                console.log("Deletion canceled.");
            }

        }



        document.getElementById('{{ user.id }}').addEventListener('click', remove) ;
    </script>
{%  endblock %}
