{% extends 'base.html.twig' %}

{% block title %}Cr√©er une barre de progression{% endblock %}

{% block body %}

    <head>
        <meta charset="UTF-8">
        <title>CodePen - Finance Mobile Application-UX/UI Design Screen One</title>
        <script type="module" src="{{ asset('https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js') }}"></script>
        <script nomodule src="{{ asset('https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js') }}"></script>
        <link rel="stylesheet" href="{{ asset('https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css') }}">
        <link rel='stylesheet' href='{{ asset('https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&amp;display=swap') }}'>
        <link rel="stylesheet" href="{{ asset('css/stylereclamation.css') }}">
        <style>
            .field {
                height: 50px;
                background: white;
                box-shadow: 0 0 2em #e6e9f9;
                padding: 1em;
                display: flex;
                flex-direction: column;
                gap: 0.5em;
                border-radius: 20px;
                color: #4d4d4d;
                margin-top: 5px;
            }

            .Desc {
                height: 200px;
                background: white;
                box-shadow: 0 0 2em #e6e9f9;
                padding: 1em;
                display: flex;
                flex-direction: column;
                gap: 0.5em;
                border-radius: 20px;
                color: #4d4d4d;
                margin-top: 5px;
                font-weight: bold;
            }

            .login {
                height: 35px;
                margin-left: 90px;
                border: none;
                border-radius: 15px;
                margin-top: 20px;
                width: 120px; /* Adjust width as needed */
                background-color: #0cb8b6;
                color: white;
                font-size: 16px; /* Adjust font size as needed */
                font-weight: bold;
                cursor: pointer;
                transition: background-color 0.3s ease;
            }

            .login:hover {
                background-color: #0a948f; /* Adjust hover color as needed */
            }
        </style>
    </head>

    <body>

    <section class="hero-section d-flex justify-content-center align-items-center" id="section_1">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-12 mx-auto">
                    <h1 class="text-white text-center display-4">Partagez l'histoire du patient</h1>

                </div>
            </div>
        </div>
    </section>
    <div class="screen " style="margin-left: 40%">

        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
        <h1> Votre Demande de don Ici</h1>
        <div>

        </div>

        <div>
            <label>Montant Cible</label>
            <div class="sec-2">
                {{ form_widget(form.target ,  {'attr': {'placeholder': 'Enter votre Cible' , 'class':'field'}}) }}
                {{ form_errors(form.target) }}
            </div>
        </div>
        <div>
            <label>Description</label>
            <div class="sec-2">
                {{ form_widget(form.description ,  {'attr': {'placeholder': 'Enter le Sujet' , 'class':'Desc'}}) }}
                {{ form_errors(form.description) }}
            </div>
        </div>

        <button type="submit" class="login">Submit</button> <!-- Styled submit button -->

    </div>
    {{ form_end(form) }}
    <!-- partial -->

    </body>
{% endblock %}
